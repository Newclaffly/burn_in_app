<script>
    $(document).ready(function () {
        $('.loader').hide();
        $('#input_lot_card').focus();

        $('#input_lot_card').keyup(function (e) {
            if (e.keyCode == 13) {
                suggest_board_information(); // Call get information suggest
            } else {

            }
        });

        $("#submit_input_information").click(function () {
            alert('Completed')
        });

        function suggest_board_information() {
            $.ajax({
                url: './ajax_display_suggest_board_information',
                type: 'POST',
                data: '',
                datatype: 'JSON',
                //beforeSend: function () {
                //    $("#Test").show();
                //},
                success: function (data) {
                    /*$('#type_cd').text(data.TYPE_CD);*/
                    console.log(data);
                    $.each(data, function (index, element) {
                        $('#board_no').val(element.BOARD_NO);
                        $('#board_model').val(element.BOARD_MODEL);
                        $('#type_cd').val(element.TYPE_CD);
                        $('#mark_lot').val(element.MARK_LOT_NO);
                        $('#qty').val(element.QUANTITY);

                        //    $('#type_cd').append("<p id='location_" + index + "'> ID: " + element.TYPE_CD + " Name: " + element.LOT_NO + "</p>");
                    });
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //alert(xhr.status);
                    //alert(xhr.statusText);
                    //alert(thrownError);
                }
            });
        }
    });
</script>

